<div class="page-title">
    <div class="row">
    	<div class="contact-form span3"></div>        
        <div class=" contact-us contact-form login-form span7">
        	<h3 style="margin-left:30%;">Categorias para tópicos.</h3>
        	<hr/>
			<% if @cats.any? %>
				<table id="hor-minimalist-b">
					<thead>
						<tr>
							<th scope="col">Nombre de la categoria</th>
							<th scope="col"></th>
							<th scope="col"></th>
						</tr>
					</thead>
					<tbody>
					<% @cats.each do |u| %>
						<tr>
							<td><%= u.name %></td>
							<td>
								<% if puede("Eliminar Categoria") %>
								<%= link_to (image_tag('file_delete.png', :size =>'25x25')), admin_category_path(u), :method => :delete, :data => { :confirm => '¿Esta seguro?' }%>
								<% end %>
							</td>
							<td>
								<% if puede("Modificar Categoria") %>
								<%= link_to (image_tag('file_edit.png', :size =>'25x25')), admin_category_path(u)%>
								<% end %>
							</td>
						</tr>
					<% end %>
					</tbody>
				</table>
			<% else %>
				<h2>Aún no se ha creado ninguna categoria.</h2>
			<% end %>
			<br/>
			<br/>
		</div>
	</div>
</div>

<div class="call-to-action-text ">
	<div class="ca-button">
	    <a href="<%= admin_path %>">Atrás</a>
	</div>
	<% if puede "Crear Evento" %>
	<div class="ca-button">
	    <a href="<%= new_admin_category_path %>">Nueva categoria</a>
	</div>
	<% end %>
</div>