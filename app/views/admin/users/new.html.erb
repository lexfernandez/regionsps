<div class="page-title">
    <div class="row">
        <div class="contact-form span3"></div>
        <div class=" contact-us contact-form login-form span7">
            <h2>Registro de nuevo usuario</h2>
            <%= form_for [:admin, @user] do |f| %>
                  <div class="name">
                    <%= f.label :first_name, 'Nombre*' %>
                    <%= f.text_field :first_name, :placeholder => 'Ingrese su nombre...' %>
                  </div>
                  <div class="name">
                    <%= f.label :last_name, 'Apellido*' %>
                    <%= f.text_field :last_name, :placeholder => 'Ingrese su apellido...' %>
                  </div>
                  <div class="name">
                    <%= f.label :email, 'Correo electrónico*' %>
                    <%= f.text_field :email, :placeholder => 'Ingrese su correo...' %>
                  </div>
                  <div class="name">
                    <%= f.label :password, 'Contraseña*', :class => 'nameLabel' %>
                    <%= f.password_field :password, :placeholder => 'Ingrese su contraseña...' %>
                  </div>
                  <div class="name">
                    <%= f.label :password_confirmation, 'Confirmar contraseña*', :class => 'nameLabel' %>
                    <%= f.password_field :password_confirmation, :placeholder => 'Repita su contraseña...' %>
                  </div>
                <br/>
                <p>*Dato obligatorio</p><br/>
                <button type="submit" name="create">Registrar</button>
                <button type="submit" name="cancel">Cancelar</button>
            <% end %>
        </div>
    </div>
</div>