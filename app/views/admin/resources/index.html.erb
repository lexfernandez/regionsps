<div class="page-title">
    <div class="row">
    	<div class="contact-form span3"></div>        
        <div class=" contact-us contact-form login-form span7">
			<% if @resources.size > 0 %>
				<h3 style="margin-left:40%;">Recursos</h3>
				<hr/>
				<table id="hor-minimalist-b">
					<thead>
						<tr>
							<th scope="col">Nombre</th>
							<th scope="col"></th>
							<th scope="col"></th>
						</tr>
					</thead>
					<tbody>
					<% @resources.each do |u| %>
						<tr>
							<td><%= u.filename %></td>
							<td>
								<% if puede "Eliminar Recurso" %>
								<%= link_to 'Eliminar', admin_resource_path(u.id), :method => :delete,
							 :data => { :confirm => '¿Seguro que desea eliminar este archivo?' } %>
							 	<% end %>
							</td>
							<td>
								<% if puede "Modificar Recurso"%>
								<%= link_to 'Administrar', admin_resource_path(u.id) %>
								<% end %>
							</td>
						</tr>
					<% end %>
					</tbody>
				</table>
			<% else %>
				<h2>Aún no ha subido recursos.</h2>
			<% end %>
			<br/>
			<br/>
		</div>
	</div>
</div>
<div class="call-to-action-text ">
	<div class="ca-button">
	    <a href="<%= admin_path %>">Atrás</a>
	</div>
	<% if puede "Crear Recurso" %>
	<div class="ca-button">
	    <a href="<%= new_admin_resource_path %>">Nuevo recurso</a>
	</div>
	<% end %>
</div>