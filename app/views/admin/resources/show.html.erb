<script type="text/javascript">
function show_new_tag(){ 
	$('input[type="hidden"]').filter("[name='new_tag']").each (function() {  this.value = '' });
	$('input[type="hidden"]').filter("[name='new_tag']").each (function() {  this.type = 'text' });
}
function hide_new_tag(){ 
	$('input[type="text"]').filter("[name='new_tag']").each (function() {  this.value = '' });
	$('input[type="text"]').filter("[name='new_tag']").each (function() {  this.type = 'hidden' });	
}
</script>

<div class="page-title">
    <div class="row">
    	<div class="contact-form span3"></div>        
        <div class=" contact-us contact-form login-form span7">	
			<h3 style="margin: auto; padding-left: 3%">
				<%= @resource.filename%>
			</h3>
			<p>Descripción: <%= @resource.description%></p>
			<% if @resource.tags.any? %>
			<table id="hor-minimalist-b">
				<thead>
					<tr>
						<th scope="col">Tags</th>
						<th scope="col"></th>
					</tr>
				</thead>
				<tbody>
				<% @resource.tags.each do |u| %>
					<tr>
						<td><%= u.title %></td>
						<td><%= link_to (image_tag('file_delete.png', :size =>'15x15')), admin_resource_tag_path(@resource, u), :method => :delete, :data => { :confirm => '¿Esta seguro?' }%></td>
					</tr>
				<% end %>
				</tbody>
			</table>
			<% end %>
			<hr>
			<%= form_for [:admin, @resource, @resource.tags.build] do |f| %>
				<div class="name">
					<%= f.label :title, "Tag" %>
					<%= f.select :title, options_for_select(@tags_available.push("Nuevo tag")), {},
					{:onChange => "if(this.value == 'Nuevo tag') show_new_tag();else hide_new_tag();"} %>
					<br/>
					<% if @resource.tags.size > 1 %>
						<input id="new_tag" type="hidden" placeholder="Nuevo tag" name="new_tag"></input>
					<% else %>
						<input id="new_tag" type="text" placeholder="Nuevo tag" name="new_tag"></input>
					<% end %>
					<button type="submit" name="create">Tagear</button>
				</div>
			<% end %>
			<br/>
		</div>
	</div>
</div>
<div class="call-to-action-text ">
	<div class="ca-button">
	    <a href="<%= admin_resources_path %>">Atrás</a>
	</div>
	<div class="ca-button">
	    <a href="<%= new_admin_resource_path %>">Nuevo recurso</a>
	</div>
	<div class="ca-button">
	    <a href="<%= @resource.file_url %>" target="_blank">Ver recurso</a>
	</div>
</div>