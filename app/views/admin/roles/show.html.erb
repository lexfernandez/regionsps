                        <input type="checkbox" name="role[permissions_list][<%=per.id%>]" 
                        <%= 'checked' if (@current_perms.include? per.id)%>><%= per.name %>
                      <% end %>
                    </label>                  
                  <% end %>

                  </td>
                </tr>
              </table>
              <% if puede "Modificar Rol" %>
