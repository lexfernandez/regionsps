		- if @roles.where("name = ?","Secretario de Barrio").any? == true
			.service.span3
				.icon-awesome
					%i.icon-folder-open
				%h4 Metas del Año
				%a{href: admin_goals_index_path(@year, @user.id, @chapel.id)} Ver Metas

		- if @roles.where("name = ?","Presidente de Estaca").any? == true
			.service.span3
				.icon-awesome
					%i.icon-folder-open
				%h4 Estadísticas de Todo el Año
				%a{href: admin_stadistic_m_path(Time.now.month, @year, @chapel.id, @stake.id, @user.id)} Ver Estadísticas

		- if @pastStadistics.size!=0
			.service.span3
				.icon-awesome
					%i.icon-folder-open
				%h4 Estadísticas Anteriores

				- if @roles.where("name = ?","Secretario de Barrio").any? || @roles.where("name = ?","Obispo").any?
					%a{href: admin_lastyears_path(@chapel.id, @stake.id, @user.id, @pastStadistics.first.created_at.year)} Ver Estadísticas
				- else
					%a{href: admin_lastyears_path(0, @stake.id, @user.id, @pastStadistics.first.created_at.year)} Ver Estadísticas

		- if @roles.where("name = ?","Presidente de Estaca").any? || @roles.where("name = ?","Secretario de Estaca").any?
			.service.span3
				.icon-awesome
					%i.icon-folder-open
				%h4 Exportar Estadísticas a Excel
				%a{href: admin_stadistics_path(format: "xls")} Exportar
				