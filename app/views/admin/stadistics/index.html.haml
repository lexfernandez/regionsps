.page-title
	.container
		.row
			.span12
				%i.icon-folder-open.page-title-icon
				%h2
					Estadísticas del Año 
					= @year
				%br/
				%h4 
					= @user.name 
					(
					- @roles.each do |role|
						= role.name

					)
				- if @roles.where("name = ?","Secretario de Barrio").any? || @roles.where("name = ?","Obispo").any?
					%h5
						Barrio 
						= @chapel.name 
						en la Estaca 
						= @stake.name
				- else
					%h5
						Estaca 
						= @stake.name

.what-we-do.container
	.row
		- if @roles.where("name = ?","Presidente de Estaca").any? == false
			- if 1<=Date.today.month
				.service.span3
					.icon-awesome
						%i.icon-folder-open
					%h4 ENERO
					%a{href: admin_stadistic_m_path(1, @year, @chapel.id, @stake.id, @user.id)} Ver Estadísticas

			- if 2<=Date.today.month
				.service.span3
					.icon-awesome
						%i.icon-folder-open
					%h4 FEBRERO
					%a{href: admin_stadistic_m_path(2, @year, @chapel.id, @stake.id, @user.id)} Ver Estadísticas

			- if 3<=Date.today.month
