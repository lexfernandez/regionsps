<div class="page-title">
    <div class="row">
    	<div class="contact-form span3"></div>        
        <div class=" contact-us contact-form login-form span7">
			<% if @resources.size > 0 %>
				<h3 style="margin-left:40%;"><%= @tag %></h3>
				<hr/>
				<ul class="teaser">
					<% @resources.each do |u| %>
					<li style="list-style: none;">
						<table>
						  <tr>
						    <td rowspan="2" style="width: 200px;">
						    	<a href="<%= u.file_url%>" class="chuckit" target="_blank">
									<%= image_tag u.thumbnail_url(:thumb).to_s, :class => 'img-decor', :style => "opacity: 1;" %>
								</a>
							</td>
						    <td style="margin-left: 10px">
						    	<h2 style="vertical-align: baseline">
						    		<a href="<%= u.file_url%>" class="chuckit" target="_blank">
						    			<%= u.filename %>
						    		</a>
						    	</h2>
						    </td>
						  </tr>
						  <tr>
							<td >
								<div class="resource_desc">
									<%= u.description %>
								</div>
							</td>
						   </tr>
						</table>
						<br/>
					</li>
					<% end %>
				</ul>
			<% else %>
				<h2>AÃºn no ha subido recursos.</h2>
			<% end %>
			<br/>
			<br/>
		</div>
	</div>
</div>