<div class="page-title">

	<div class="row">
		<div class="contact-form span3"></div>
		<div class="contact-us login-form span6">

			<%= form_for @contact do |f| %>

			  <% if @contact.errors.any? %>
			    <div id="error_explanation">
			      <ul>
			      <% @contact.errors.messages.each do |e| %>
			        <li class="error-item"><%= e[1][0] %></li>
			      <% end %>
			      </ul>
			    </div>
			  <% end %>

			  <div class="field">
			    <h2>Cont√°ctenos</h2>
			  </div>

			  <div class="field">
			    <%= f.label :name, "Nombre: " %>
			    <%= f.text_field :name %>
			  </div>

			  <div class="field">
			    <%= f.label :email, "Correo: " %>
			    <%= f.text_field :email %>
			  </div>

			  <div class="field">
			    <%= f.label :subject, "Asunto: " %>
			    <%= f.text_field :subject %>
			  </div>

			  <div class="field">
			    <%= f.label :message, "Mensaje" %>
			    <%= f.text_area :message %>
			  </div>

			  <div class="actions">
			    <button type="submit" name="create" style="width: 220px;">Enviar</button>
			  </div>
			<% end %>
		</div>
	</div>
</div>