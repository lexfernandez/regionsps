    <div class="testimonials container">
        <div class="testimonials-title">
            <h3 style="width: 300px;">Actividades y Reuniones</h3>
        </div>
        <div class="row">
            <div class="testimonial-list">
                <% if @events.any? %>
                <div class="tabbable tabs-below">
                    <div class="tab-content">
                        <% @events.each_with_index do |e, i|%>
                        <div class="tab-pane <% if i == 0 %>active<%end %>" id="<%= e.id %>">                            
                            <p>
                                <strong><%= e.name %></strong>
                                <br/>
                                <%= e.description %>
                                <br />
                                <span class="violet">Lugar: </span><%= e.place %>
                                <br />
                                <span class="violet">Fecha y hora: </span><%= e.celebrated_at %>
                            </p>
                        </div>
                        <% end %>                  
                    </div>

                   <ul class="nav nav-tabs">
                    <% @events.each_with_index do |e, i| %>
                    <li class="<% if i == 0 %>active<% end %>"><a href="#<%= e.id%>" data-toggle="tab"></a></li>
                    <% end %>
                   </ul>
               </div>
               <% else %>
                    <h4 style="margin-left: 42%">No hay actividades próximas.</h4>
               <% end %>
            </div>
        </div>
